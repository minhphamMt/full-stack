<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Document</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet" />
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    </head>
    <body>
        <div class="user-infor-container">
            <form method="POST" action="/user/create-user">
                <div class="container">
                    <div class="row">
                        <h3 class="mt-3">Create User</h3>
                        <div class="mb-3 mt-3 col-6">
                            <label for="email" class="form-label">Email
                                address</label>
                            <input
                                name="email"
                                type="email"
                                class="form-control"
                                id="email"
                                aria-describedby="emailHelp"
                                required />
                        </div>
                        <div class="col-6"></div>
                        <div class="mb-3 col-6">
                            <label for="password" class="form-label">Password</label>
                            <input
                                name="password"
                                type="password"
                                class="form-control"
                                id="password"
                                required />
                        </div>
                        <div class="col-6"></div>
                        <div class="col-6 pb-3">
                            <label for="username" class="form-label">User
                                Name</label>
                            <input
                                name="username"
                                type="text"
                                class="form-control"
                                id="username"
                                required />
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>

                    </form>
                </div>
                <div class="table-user">
                    <h3 class="mt-3 mb-3">Table Users:</h3>
                    <table class="table table-hover table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Email</th>
                                <th scope="col">User Name</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>

                            <% UserList.forEach(function(item,index){ %>
                            <tr>
                                <th scope="row"><%=index+1 %></th>
                                <td><%=item.email %></td>
                                <td><%=item.username %></td>
                                <td>
                                    <form action="/update-user/<%=item.id%>"
                                        method="POST"
                                        style="display: inline-block;">
                                        <button class="btn btn-primary"
                                            type="submit">Edit</button>
                                    </form>
                                    <form action="/delete-user/<%=item.id%>"
                                        method="POST"
                                        style="display: inline-block;">
                                        <button class="btn btn-danger"
                                            type="submit">Delete</button>
                                    </form>
                                </td>
                            </tr>
                            <% } ) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </body>
</html>
